<div class="position-relative text-center bg-light p-3 p-m-5">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4">{{ blog.title }}</h1>
    <p class="lead">Read our latest publication</p>
  </div>
</div>

<div class="container my-5 p-2">
  {% paginate blog.articles by 5 %}
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 py-5">
    {% for article in blog.articles %}
  <div class="col">
    <div class="card shadow">
      {% if article.image.src != null%}
        <img src="{{ article.image.src | img_url: 'small' }}" alt="{{ article.image.alt }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'card-img-top' }}
        {% endif %}
      <div class="card-body">
          <h2>
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h2>
    {{ article.author }} @ {{ article.created_at }}
    <p class="card-text">
      {% if article.excerpt.size > 0 %}
      {{ article.excerpt }}
      {% else %}
      <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
      {% endif %}
    </p>
      </div>
    </div>
    
  </div>
  {% endfor %}
  </div>
  {% render 'pagination', paginate: paginate %}  
  {% endpaginate %}
</div>
