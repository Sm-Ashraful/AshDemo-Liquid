"default": 3, "min": 2, "max": 4, "label":"Number of column" } ], "blocks":[ {
"type": "link_list", "name": "Navigation", "settings":[ { "type": "text", "id":
"title", "label":"TItle", "default": "Quick Links" }, { "type": "link_list",
"id": "menu", "label":"Menu" } ] }, { "type": "text", "name": "Store details",
"settings":[ { "type": "image_picker", "id":"logo", "label":"Store Logo" },{
"type": "text", "id":"title", "label":"Heading", "default":"Store Information"
}, { "type": "richtext", "id":"description", "label":"Text" } ] } ] } {%
endschema %}
