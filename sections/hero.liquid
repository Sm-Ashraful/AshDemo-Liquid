<section class="inner-hero-section">
  {% if section.settings.image != blank %}

  <img src="{{ section.settings.image | img_url }}" alt="" />
  {% else %} {% capture current %}{% cycle 1,2 %}{% endcapture %}
  {{ "lifestyle-" | append: current | placeholder_svg_tag: "placeholder-svg" }}
  {% endif %}
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.description }}</p>
        <a
          href="{{ section.settings.button_link }}"
          class="btn btn-secondary"
          >{{ section.settings.button_label }}</a
        >
      </div>
    </div>
  </div>
</section>

{%schema%} { "name":"Hero", "class":"hero-section", "settings":[ { "type":
"image_picker", "id": "image", "label": "Heading Background Image" },{ "type":
"text", "id":"title", "label":"Heading Title", "default":"Example Heading" }, {
"type": "richtext", "id":"description", "label":"Heading Description" }, {
"type": "text", "id":"button_label", "label":"Button", "default":"Button Label"
}, { "type": "url", "id":"button_link", "label":"Button Link" } ], "presets": [
{ "category": "Hero", "name":"Simple Hero" } ] } {% endschema%}
