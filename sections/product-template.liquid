{% assign current_product = product.selected_or_first_available_variant %} {%
assign product_image = current_product.featured_image | default:
product.featured_image %}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-12">
      <img
        class="img-fluid"
        src="{{ product_image | img_url: 'large' }}"
        alt="{{ product_image.alt }}"
        id="ProductMainImage"
      />
      {% for image in product.images %}
      <img src="{{ image.src | img_url: 'small' }}" alt="{{ image.alt }}" />
      {% endfor %}
    </div>
    <div class="col-md-6 col-12">
      <h1>{{ product.title }}</h1>
      <p>{{ current_product.price | money_with_currency }}</p>
      <p>{{ product.description }}</p>
      {% form 'product', product, class:"product-form", id:"AddToCartForm" %}
      <div class="mb-3">
        <select name="id" id="productSelect" class="form-select">
          {% for variant in product.variants %} {% if variant.available %}
          <option value="{{ variant.id }}">
            {{ variant.title }}
          </option>
          {% else %}
          <option value="{{ variant.id }}" disabled="disabled">
            {{ variant.title }}
          </option>
          {% endif %} {% endfor %}
        </select>
      </div>
      <div class="mb-3">
        <input
          type="number"
          name="quantity"
          id="quantity"
          class="form-control"
          value="1"
          min="1"
        />
      </div>
      <button
        type="submit"
        name="add"
        id="AddToCart"
        class="btn btn-secondary btn-lg w-100 rounded-0"
      >
        Add to Cart
      </button>
      {% if section.settings.dynamic_button_checkbox %}

      {{ form | payment_button }}
      {% endif %} {% endform %}
    </div>
  </div>
</div>
{% schema %} { "name": "Product page", "settings":[ { "type": "checkbox",
"id":"dynamic_button_checkbox", "label":"Enable Dynamic Buttons", "default":
false } ] } {% endschema %}
